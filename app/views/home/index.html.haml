.row
  .col.m6
    .card
      %span.card-title
        Most recent Seizure
      - if @most_recent
        %p
          = @most_recent.simple_date
          %br
          = @most_recent.simple_time
          %br
          length
          %br
          = @most_recent.parsed_length
        .card-action
          = link_to 'More Details', seizure_path(@most_recent)
          = link_to 'All Previous', seizures_path
  .col.m6
    .card
      = react_component 'Average'
.row
  .col.m6
    .card
      = react_component('TimeOfDayChart', {TimeOfDayChartData: @time_of_day_data})
  .col.m6
    .card
      = react_component('RecentSeizureChart', {SeizureActivity: @recent_seizures})
.row
  .col.m12
    .card
      - tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class|
        %p{ :class => css_class}
          = tag.name
